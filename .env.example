# StratoSort Backend Configuration
# Copy this file to .env and adjust values as needed

# ===== Ollama Configuration =====
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_VISION_MODEL=llava:latest

# ===== Embedding Configuration =====
# CRITICAL: Must be 768 for nomic-embed-text
EMBEDDING_DIMENSIONS=768
ENABLE_VECTOR_SEARCH=true

# ===== Database Configuration =====
DATABASE_PATH=./data/stratosort.db
DATABASE_MAX_CONNECTIONS=10

# ===== File Watching & Automation =====
WATCH_FOLDERS_ENABLED=true
AUTO_ORGANIZE_ENABLED=false
AUTO_ORGANIZE_THRESHOLD=0.8
AUTOMATION_INTERVAL_SECONDS=60

# ===== Logging =====
LOG_LEVEL=info
RUST_LOG=stratosort=debug,tauri=info

# ===== Performance Tuning =====
BATCH_SIZE=50
MAX_CONCURRENT_ANALYSES=5
MAX_FILE_SIZE_MB=50
ENABLE_CACHING=true

# ===== AI Provider =====
# Options: ollama, fallback
AI_PROVIDER=ollama

# ===== Development Mode =====
DEVELOPMENT_MODE=false

# ===== Legacy Settings (for GUI compatibility) =====
FILE_WATCH_ENABLED=true
MAX_FILE_SIZE=104857600
MAX_CONCURRENT_ANALYSIS=4
MAX_CONCURRENT_OPERATIONS=10
CACHE_SIZE_MB=100
ENABLE_GPU_ACCELERATION=false
THEME=auto
LANGUAGE=en
SHOW_NOTIFICATIONS=true
NOTIFICATION_DURATION_MS=5000
ENABLE_TELEMETRY=false
ENABLE_CRASH_REPORTS=false
ENABLE_ANALYTICS=false
CONFIRM_BEFORE_DELETE=true
CONFIRM_BEFORE_MOVE=false
DEBUG_MODE=false
HISTORY_RETENTION_DAYS=30
UNDO_HISTORY_SIZE=50
FILE_EXTENSIONS_IGNORE=.tmp,.temp,.cache,.log
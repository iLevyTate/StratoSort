{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for StratoSort",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/StratoSort",
        "$APPDATA/StratoSort/**",
        "$RESOURCE",
        "$RESOURCE/**",
        "$DOCUMENT/StratoSort",
        "$DOCUMENT/StratoSort/**",
        "$DOWNLOAD/StratoSort",
        "$DOWNLOAD/StratoSort/**",
        "$PICTURE/StratoSort",
        "$PICTURE/StratoSort/**",
        "$DESKTOP/StratoSort",
        "$DESKTOP/StratoSort/**",
        "$VIDEO/StratoSort",
        "$VIDEO/StratoSort/**",
        "$MUSIC/StratoSort",
        "$MUSIC/StratoSort/**"
      ],
      "deny": [
        "$HOME/.ssh/**",
        "$HOME/.gnupg/**",
        "$HOME/.config/**",
        "$HOME/.*"
      ]
    },
    "notification:default",
    "global-shortcut:default",
    "clipboard-manager:default",
    "store:default",
    "process:default",
    "os:default",
    "positioner:default",
    "http:allow-fetch",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    "http:allow-fetch-cancel",
    "window-state:default"
  ]
}